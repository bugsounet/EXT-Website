{
  "openapi": "3.0.0",
  "info": {
    "description": "Control MMM-GoogleAssistant from API",
    "version": "1.0.0",
    "title": "EXT-Website API"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8081"
    }
  ],
  "tags": [
    {
      "name": "Test",
      "description": "Testing tool"
    },
    {
      "name": "Authentification",
      "description": "Authentification to API Server"
    },
    {
      "name": "Tools",
      "description": "Helper Tools"
    }
  ],
  "paths": {
    "/api": {
      "get": {
        "tags": [
          "Test"
        ],
        "summary": "Test API path",
        "responses": {
          "200": {
            "description": "Return api state",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Test"
                }
              }
            }
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "tags": [
          "Authentification"
        ],
        "summary": "Basic Authentification with EXT-Website credentials",
        "security": [
          {
            "Basic": []
          }
        ],
        "responses": {
          "200": {
            "description": "Returns `access_token`, `token_type` and `expire_in` values",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Login"
                }
              }
            }
          },
          "401": {
            "description": "Returns `error` and `description`",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginError"
                }
              }
            }
          }
        }
      }
    },
    "/api/translations": {
      "get": {
        "tags": [
          "Tools"
        ],
        "summary": "Returns current translations collection",
        "responses": {
          "200": {
            "description": "Send collection of translations part",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Translations"
                }
              }
            }
          }
        }
      }
    },
    "/api/version": {
      "get": {
        "tags": [
          "Tools"
        ],
        "summary": "Returns EXT-Website current version, revision, language, ...",
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Send EXT-Website version tools",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Version"
                }
              }
            }
          },
          "206": {
            "description": "Send Partial EXT-Website version",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Version206Error"
                }
              }
            }
          },
          "401": {
            "description": "Missing valid authentication token",
            "content": {
              "text/html": {
                "schema": {
                  "$ref": "#/components/schemas/401Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/homeText": {
      "get": {
        "tags": [
          "Tools"
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Send translated home text HTML page"
          },
          "401": {
            "description": "Error..."
          }
        }
      }
    },
    "/api/sysInfo": {
      "get": {
        "tags": [
          "Tools"
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Send system information collection"
          },
          "401": {
            "description": "Error..."
          }
        }
      }
    },
    "/api/EXTVersions": {
      "get": {
        "tags": [
          "Tools"
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Send version of EXTs actually used"
          },
          "401": {
            "description": "Error..."
          }
        }
      }
    },
    "/api/MMConfig": {
      "get": {
        "tags": [
          "Tools"
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Send MagicMirror configuration"
          },
          "401": {
            "description": "Error..."
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "Basic": {
        "type": "http",
        "scheme": "basic",
        "description": "`EXT-Website` credentials for Authentication."
      },
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "description": "`access_token` sended on login."
      }
    },
    "schemas": {
      "Test": {
        "type": "object",
        "properties": {
          "api": {
            "type": "string"
          }
        },
        "example": {
          "api": "OK"
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string"
          },
          "token_type": {
            "type": "string"
          },
          "expire_in": {
            "type": "number"
          }
        },
        "example": {
          "access_token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VyIjoiYnVnc291bmV0IiwiaWF0IjoxNzE3MTU3NDg1LCJleHAiOjE3MTcxNjEwODV9.ZFoliD-dZXFI5w9TPBt7nnjEy1vP6YGP9jdUf_i-660",
          "token_type": "Bearer",
          "expire_in": 3600
        }
      },
      "LoginError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "example": {
          "error": "Invalid credentials",
          "description": "Invalid username or password"
        }
      },
