      "Version": {
        "type": "object",
        "properties": {
          "version": {
            "type": "string"
          },
          "rev": {
            "type": "string"
          },
          "lang": {
            "type": "string"
          },
          "last": {
            "type": "string"
          },
          "needUpdate": {
            "type": "boolean"
          }
        },
        "example": {
          "version": "1.1.0",
          "rev": "240106",
          "lang": "fr",
          "last": "1.0.0",
          "needUpdate": true
        }
      },
      "Version206Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "rev": {
            "type": "string"
          },
          "lang": {
            "type": "string"
          },
          "last": {
            "type": "string"
          },
          "needUpdate": {
            "type": "boolean"
          }
        },
        "example": {
          "error": "Error on fetch last version number",
          "version": "1.1.0",
          "rev": "240106",
          "lang": "fr",
          "last": "0.0.0",
          "needUpdate": false
        }
      },
      "401Error": {
        "type": "string",
        "example": "Unauthorized"
